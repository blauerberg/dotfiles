command_exists() {
  type $1 > /dev/null 2>&1;
}

autoload -Uz compinit
compinit -C
setopt transient_rprompt

command_exists "brew"
if [ $? -eq 0 ]; then
  export PATH=/usr/local/bin:/usr/local/sbin:$PATH
fi

command_exists "direnv"
if [ $? -eq 0 ]; then
  eval "$(direnv hook zsh)"
fi

# any
if [ -d "$HOME/.anyenv" ]; then
  export PATH=$HOME/.anyenv/bin:$PATH
fi
command_exists "anyenv"
if [ $? -eq 0 ]; then
  eval "$(anyenv init -)"
fi

# grunt-cli
command_exists "grunt"
if [ $? -eq 0 ]; then
  eval "$(grunt --completion=zsh)"
fi

# DrupalConsole
if [ -f "$HOME/.console/console.rc" ]; then
  source "$HOME/.console/console.rc" 2>/dev/null
fi

# git-flow-completion
if [ -d "$HOME/dotfiles/git-flow-completion" ]; then
  source "$HOME/dotfiles/git-flow-completion/git-flow-completion.zsh" 2>/dev/null
fi

# dircolors
if [[ "$OSTYPE" == "linux-gnu" ]]; then
  eval `dircolors ~/.dotfiles/dircolors-solarized/dircolors.256dark`
fi

export GOPATH=$HOME/go
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

alias sshp="ssh -o PreferredAuthentications=password -o PubkeyAuthentication=no"
alias drupalctags="ctags --langmap=php:.engine.inc.module.theme.install.php --php-kinds=cdfi --languages=php --recurse --fields=+l"
alias git-my-commit="git commit --author=\"Yoshikazu Aoyama <yskz.aoyama@gmail.com>\""
alias git-submodule-reset="git submodule foreach --recursive git reset --hard"
